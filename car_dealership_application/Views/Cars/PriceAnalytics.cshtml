@{
    ViewData["Title"] = "Price Analytics";
    ViewData["Subject"] = "Car";
}

<div class="container-fluid px-4 pb-3" role="main">
    <h1 class="pt-4">@ViewData["Title"]</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item">
            <a asp-area="" asp-controller="Home" asp-action="Index">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">
            @ViewData["Title"]
        </li>
    </ol>
</div>

<div id="loading-subpage" class="outer" style="display: table;">
    <div class="middle">
        <div class="inner">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    </div>
</div>
<div id="dashboard" class="container-fluid px-4 pb-3">
    <div class="row d-flex justify-content-between align-items-center m-0 pb-4">
        <div class="col-8 px-0">
            <h2>Global feature importance</h2>
        </div>
        <div class="col-4 d-flex justify-content-end align-items-center">
            <a asp-area="" asp-controller="Cars" asp-action="PredictPrice" class="btn btn-outline-primary d-flex justify-content-center align-items-center">
                <span>Predict Car Price</span>
            </a>
        </div>
    </div>
    <div class="row d-flex justify-content-center align-items-center">
        <div class="col-lg-6">
            <div class="card mb-4">
                <div class="row card-header d-flex justify-content-between align-items-center mx-0">
                    <div class="col-8">
                        <i class="fas fa-chart-bar me-1"></i>
                        Raw features
                    </div>
                    <div class="col-4 d-flex justify-content-end px-0">
                        <a id="globalRawFIZoom" class="chart-action">
                            Reset Zoom
                        </a>
                    </div>
                </div>
                <div class="card-body draggable-container">
                    <canvas id="globalRawFI" width="400" height="400"></canvas>
                </div>
                <!-- <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div> -->
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card mb-4">
                <div class="row card-header d-flex justify-content-between align-items-center mx-0">
                    <div class="col-8">
                        <i class="fas fa-chart-bar me-1"></i>
                        Engineered features
                    </div>
                    <div class="col-4 d-flex justify-content-end px-0">
                        <a id="globalEngineeredFIZoom" class="chart-action">
                            Reset Zoom
                        </a>
                    </div>
                </div>
                <div class="card-body draggable-container">
                    <canvas id="globalEngineeredFI" width="400" height="400"></canvas>
                </div>
                <!-- <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div> -->
            </div>
        </div>
    </div>
</div>